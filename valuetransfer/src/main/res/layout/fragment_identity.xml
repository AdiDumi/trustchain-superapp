<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIdentities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="1"
                tools:listitem="@layout/item_identity_detail" />

            <TextView
                android:id="@+id/tvAttributesTitle"
                style="@style/FragmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_title_identity_attributes"
                app:layout_constraintEnd_toStartOf="@+id/ivAttributesInfoIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvIdentities" />

            <ImageView
                android:id="@+id/ivAttributesInfoIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_info_24"
                app:tint="?attr/mutedColor"
                android:tooltipText="@string/text_tooltip_identity_attributes"
                app:layout_constraintBottom_toBottomOf="@+id/tvAttributesTitle"
                app:layout_constraintStart_toEndOf="@+id/tvAttributesTitle"
                app:layout_constraintTop_toTopOf="@+id/tvAttributesTitle" />

            <ImageView
                android:id="@+id/ivAddAttribute"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:src="@drawable/ic_add_black_24dp"
                app:tint="?attr/mutedColor"
                app:layout_constraintBottom_toBottomOf="@+id/tvAttributesTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvAttributesTitle" />

            <TextView
                android:id="@+id/tvNoAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/pill_rounded"
                android:paddingVertical="4dp"
                android:text="@string/text_no_attributes"
                android:textColor="?attr/onBackgroundColor"
                android:textStyle="italic"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAttributesTitle"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNoAttributes"
                tools:itemCount="1"
                tools:listitem="@layout/item_identity_attribute" />

            <TextView
                android:id="@+id/tvAttestationsTitle"
                style="@style/FragmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_title_attestations"
                app:layout_constraintEnd_toStartOf="@+id/ivAttestationsInfoIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvAttributes" />

            <ImageView
                android:id="@+id/ivAttestationsInfoIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_info_24"
                app:tint="?attr/mutedColor"
                android:tooltipText="@string/text_tooltip_attestations"
                app:layout_constraintBottom_toBottomOf="@+id/tvAttestationsTitle"
                app:layout_constraintStart_toEndOf="@+id/tvAttestationsTitle"
                app:layout_constraintTop_toTopOf="@+id/tvAttestationsTitle" />

            <ImageView
                android:id="@+id/ivAddAttestationAuthority"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:padding="4dp"
                android:src="@drawable/ic_add_black_24dp"
                app:tint="?attr/mutedColor"
                app:layout_constraintBottom_toBottomOf="@+id/tvAttestationsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvAttestationsTitle" />

            <TextView
                android:id="@+id/tvNoAttestations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/pill_rounded"
                android:paddingVertical="4dp"
                android:text="@string/text_no_attestations"
                android:textColor="?attr/onBackgroundColor"
                android:textStyle="italic"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAttestationsTitle"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttestations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNoAttestations"
                tools:itemCount="1"
                tools:listitem="@layout/item_identity_attestation" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
