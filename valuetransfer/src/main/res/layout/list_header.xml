    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/ivCategoryIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:tint="@color/colorGreen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_identity" />

    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="My Identities"
        android:textStyle="italic|bold"
        android:textColor="@color/colorPrimaryValueTransfer"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCategoryIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCategoryNavigate"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/ic_arrow_right"
        android:backgroundTint="@color/colorPrimaryValueTransfer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

