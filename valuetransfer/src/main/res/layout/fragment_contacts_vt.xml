    <EditText
        android:id="@+id/etSearchContact"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:paddingStart="45dp"
        android:paddingEnd="40dp"
        android:textColor="@color/colorPrimaryValueTransfer"
        android:singleLine="true"
        android:inputType="text"
        android:hint="Search Contact..."
        android:textSize="12dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/pill_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSearchBarIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_baseline_search_24"
        app:tint="@color/colorPrimaryValueTransfer"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchContact"
        app:layout_constraintStart_toStartOf="@+id/etSearchContact"
        app:layout_constraintTop_toTopOf="@+id/etSearchContact" />

    <ImageView
        android:id="@+id/ivSearchBarCancelIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="@color/colorPrimaryValueTransfer"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchContact"
        app:layout_constraintEnd_toEndOf="@+id/etSearchContact"
        app:layout_constraintTop_toTopOf="@+id/etSearchContact" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSearchResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etSearchContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/llContactNew"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivContactNew"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:padding="11dp"
                android:background="@drawable/circle_stroked"
                android:backgroundTint="@color/gray"
                android:src="@drawable/ic_add_black_24dp"
                app:tint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvContactNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textSize="12sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ivContactNew"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvContacts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:itemCount="1"
            tools:listitem="@layout/item_contacts"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/llContactNew"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvRecentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clSearchResults"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvRecentTitle"
        tools:itemCount="1"
        tools:listitem="@layout/item_chat_overview" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvChats"
        style="@style/BottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorPrimaryValueTransfer"
        app:menu="@menu/valuetransfer_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
